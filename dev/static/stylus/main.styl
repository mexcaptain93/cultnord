@import 'components/components.styl'
@import 'utils/fonts.styl'
@import 'vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
	font-size baseFontSize
	height 100%
	line-height 1.3

body
	font-family mainFont
	height 100%

	-webkit-text-size-adjust: none
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale
	-moz-font-smoothing: antialiased
	-webkit-tap-highlight-color: transparent
	text-rendering: optimizeLegibility

	&.stop-scroll
		overflow: hidden

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color black
	text-decoration none
	outline: none


audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select,
button
	outline none



*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	height 100%

.content
	flex 1 0 auto

.container
	width: 100%
	max-width: 1168px
	padding: 0 16px
	margin: 0 auto

	&_small
		max-width: 880px

a
	color: inherit
	text-decoration: underline
	//text-underline-position: under

	&:hover
		color: $blue
		text-decoration: none

.content-sidebar
	display: flex

	@media $tablet_small
		flex-direction: column

	.sidebar
		width: 272px
		margin-left: 40px
		flex-shrink: 0

		@media $tablet_small
			margin-left: 0
			margin-top: 40px
			width: auto

		&__block
			margin-bottom: 52px

			&:last-child
				margin-bottom: 0

			&_mini
				margin-bottom: 38px

		&__heading
			border-bottom: 1px solid $brown
			padding-bottom: 7px
			margin-bottom: 21px

			font-family: 'Playfair'
			font-size: 20px
			line-height: 24px
			letter-spacing: 3px
			text-transform: uppercase
			color: $brown


img
	max-height: 100%
	max-width: 100%

