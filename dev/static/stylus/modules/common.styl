    background-size: cover
    background-repeat: no-repeat
    background-position: center center
    margin-right: 16px
    margin-bottom: 13px

    @media $tablet_small
      margin-right: 0
      margin-left: 16px

    &:nth-child(even)
      margin-right: 0

