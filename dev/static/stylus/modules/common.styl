.burger
  display: block
  position: relative
  overflow: hidden
  margin: 0
  padding: 0
  width: 33px
  height: 28px
  font-size: 0
  text-indent: -9999px
  appearance: none
  box-shadow: none
  border-radius: none
  border: none
  cursor: pointer


  span
    display: block
    position: absolute
    top: 12px
    left: 5px
    right: 5px
    height: 2px
    background: $gray


    &::before, &::after
      position: absolute
      display: block
      left: 0
      width: 100%
      height: 2px
      background-color: $gray
      content: ""
      transition: transform 0.3s

    &::before
      top: -10px

    &::after
      bottom: -10px

  &_opened

    span

      background: transparent

      &::before
        top: 0
        transform: rotate(45deg)
        background: $gray

      &::after
        bottom: 0
        transform: rotate(-45deg)
        background: $gray

.like-h1
  margin-bottom: 65px

  color: $brown
  font-size: 24px
  line-height: 32px
  letter-spacing: 2.2px
  font-family: 'Playfair'
  text-transform: uppercase
  font-weight: bold
  text-align: center

.like-h2
  color: $brown
  font-size: 24px
  line-height: 34px
  letter-spacing: 0
  font-family: 'Playfair'
  font-weight: normal

p
  color: $gray
  font-size: 16px
  line-height: 28px
  letter-spacing: 0

u
  text-underline-position: under

.subtext
  display: block
  width: 100%
  padding-bottom: 5px
  border-bottom: 1px solid $gray_light2

  color: $brown
  font-size: 16px
  line-height: 28px
  font-family: 'Playfair'
  font-style: italic
  font-weight: normal

.small_text
  color: $gray
  font-family: 'PTSerif'
  font-style: italic
  font-size: 14px
  line-height: 18px
  letter-spacing: 0

.pagination

  &__list
    display: flex

  &__item
    margin-right: 7px

    color: $blue
    font-size: 18px
    line-height: 36px
    letter-spacing: 1.8px
    font-family: 'Playfair'
    font-weight: bold

    a
      text-decoration: none

    &::after
      content: ' — '
      color: $brown_light

    &:last-child

      &::after
        content: none

.breadcrumbs
  margin-bottom: 55px
  padding: 10px 0 2px
  background-image: url('../img/general/breadcrumbs-bg.png')
  background-repeat: repeat-x

  &__list
    display: flex
    align-items: center

  &__item
    margin-right: 2px

    color: $gray_light3
    font-size: 12px
    line-height: 28px
    letter-spacing: .3px

    a
      text-decoration: underline

      &:hover
        text-decoration: none



    &::after
      content: ' — '
      margin: 0 2px
      color: $brown_light

    &:last-child
      text-decoration: none

      &::after
        content: none

.file
  display: flex
  align-items: flex-start

  &__icon
    margin-right: 16px
    max-width: 32px
    max-height: 40px

  &__text
    max-width: 230px
    margin-top: -4px

    font-family: 'Playfair'
    font-size: 13px
    line-height: 20px
    letter-spacing: 0

  &__name
    font-weight: bold
    color: $gray

  &__bottom
    display: flex

  &__download
    margin-right: 5px

    color: $gray_dark2
    font-weight: normal
    text-decoration: underline

    &:hover
      text-decoration: none

  &__meta
    font-size: 13px
    color: $gray_light

.list-block
  max-width: 230px

  &__title
    margin-bottom: -10px

    font-size: 18px
    line-height: 30px
    letter-spacing: 0
    color: $gray

    a
      text-underline-position: initial

  &__sub
    color: alpha($gray, 0.41)
    font-size: 14px
    line-height: 36px

  &__text
    color: $gray
    font-size: 11px
    line-height: 16px
    letter-spacing: 0

.button
  display: inline-block
  border: 1px solid $brown_light
  padding: 14px 38px 11px
  background-color: $white

  color: $brown_light2
  font-size: 14px
  line-height: 22px
  letter-spacing: 1.4px
  text-transform: uppercase
  text-decoration: none
  transition: .3s all ease

  &:hover
    border-color: $blue
    background-color: $blue
    color: $white

  &_color
    border-color: $blue
    background-color: $blue
    color: $white

    &:hover
      background-color: $white
      color: $blue

    &.button_icon

      i
        &.prev
          background-image: url('../img/general/prev-white.png')

      &:hover

        i
          &.prev
            background-image: url('../img/general/prev-blue.png')

  &_icon
    padding-left: 30px
    padding-right: 30px

    i
      display: inline-block
      vertical-align: middle
      background-size: contain
      background-repeat: no-repeat
      margin-right: 15px

      &.prev
        width: 6px
        height: 11px

        margin-top: -4px
        background-image: url('../img/general/prev-black.png')

      &.next-bold
        width: 21px
        height: 23px
        margin-right: -10px
        margin-top: -4px
        background-image: url('../img/general/next-bold-blue-light.png')


    &:hover 
      
      i

        &.prev
          background-image: url('../img/general/prev-white.png')

        &.next-bold
          background-image: url('../img/general/next-bold-blue.png')

  &_serif
    border: 2px solid $white
    padding: 10px 24px 4px
    box-shadow: 0 4px 3px 0 rgba(2, 55, 59, 0.14);
    background-color: $blue

    font-family: 'PTSerif'
    font-size: 12px
    line-height: 18px
    letter-spacing: 1.5px
    color: $white
    font-weight: bold

    &:hover
      background-color: $white

      color: $blue

  &_serif-big
    @extend .button_serif

    padding: 12px 42px 10px
    font-size: 14px
    line-height: 22px
    letter-spacing: 1.4px

    i

      &.next-bold
        margin-left: 8px

.slick-slide
  outline: none



