.button
  display: inline-block
  border: 1px solid $brown_light
  padding: 14px 38px 11px
  background-color: $white

  color: $brown_light2
  font-size: 14px
  line-height: 22px
  letter-spacing: 1.4px
  text-transform: uppercase
  text-decoration: none
  transition: .3s all ease
  text-align: center

  &:hover
    border-color: $blue
    background-color: $blue
    color: $white

  &_color
    border-color: $blue
    background-color: $blue
    color: $white

    &:hover
      background-color: $white
      color: $blue

    &.button_icon

      i
        &.prev
          background-image: url('../img/general/prev-white.png')

        &.next
          background-image: url('../img/general/next-white.png')

      &:hover

        i
          &.prev
            background-image: url('../img/general/prev-blue.png')

          &.next
            background-image: url('../img/general/next-blue.png')

  &_icon
    padding-left: 30px
    padding-right: 30px

    @media $phone
      padding-left: 10px
      padding-right: 10px

    i
      display: inline-block
      vertical-align: middle
      background-size: contain
      background-repeat: no-repeat
      margin-right: 15px

      &.prev
        width: 6px
        height: 11px

        margin-top: -4px
        background-image: url('../img/general/prev-black.png')

      &.next
        width: 6px
        height: 11px
        margin-top: -4px
        margin-right: 0
        margin-left: 15px

      &.next-bold
        width: 21px
        height: 23px
        margin-right: -10px
        margin-top: -4px
        background-image: url('../img/general/next-bold-blue-light.png')


    &:hover 
      
      i

        &.prev
          background-image: url('../img/general/prev-white.png')

        &.next-bold
          background-image: url('../img/general/next-bold-blue.png')

  &_serif
    border: 2px solid $white
    padding: 10px 24px 4px
    box-shadow: 0 4px 3px 0 rgba(2, 55, 59, 0.14);
    background-color: $blue

    font-family: 'PTSerif'
    font-size: 12px
    line-height: 18px
    letter-spacing: 1.5px
    color: $white
    font-weight: bold

    &:hover
      background-color: $white

      color: $blue

  &_serif-big
    @extend .button_serif

    padding: 12px 42px 10px
    font-size: 14px
    line-height: 22px
    letter-spacing: 1.4px

    i

      &.next-bold
        margin-left: 8px

.slick-slide
  outline: none

.story-in-pic
  margin-bottom: 100px

  &__list
    display: flex
    justify-content: space-between

    @media $tablet_small
      flex-direction: column
      align-items: center

  &__item
    position: relative
    display: flex
    flex-direction: column
    justify-content: flex-end
    width: calc(100% / 3 - 10px)
    height: 354px
    padding-bottom: 35px
    background-color: $brown2
    transition: .3s ease opacity

    text-decoration: none

    @media $tablet_small
      max-width: 400px
      width: 100%
      margin-bottom: 20px

    &:last-child

      @media $tablet_small
        margin-bottom: 0

    &:hover
      opacity: .7

  &__img
    position: absolute
    z-index: 0
    top: 0
    left: 0
    right: 0
    bottom: 0
    opacity: .3
    background-size: cover
    background-repeat: no-repeat

    @media $tablet_small
      background-size: cover


  &__title
    position: relative
    z-index: 1
    padding: 0 20px
    margin-bottom: 15px

    font-size: 18px
    line-height: 24px
    letter-spacing: 0
    font-family: 'Playfair'
    font-weight: bold
    color: $white
    text-align: center

    @media $tablet_small
      padding: 0 10px

  &__descr
    position: relative
    z-index: 1
    padding: 0 26px

    font-size: 14px
    line-height: 22px
    letter-spacing: 0
    color: $white
    text-align: center


.sources
  font-size: 13px
  line-height: 20px
