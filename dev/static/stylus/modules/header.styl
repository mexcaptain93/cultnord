.header

  &__wrap
    display: flex
    justify-content: space-between
    align-items: center
    padding-top: 30px
    padding-bottom: 43px

    @media $tablet
      padding-top: 15px
      padding-bottom: 20px

  &__logo

    @media $desktop_small
      order: 0
      margin-right: 45px

    @media $tablet
      margin-right: 30px

    img

      @media $tablet
        max-height: 75px

  &__menu
    width: 400px

    @media $desktop_small
      order: 1
      flex-grow: 1

    @media $tablet_small
      display: none

  &__burger-search
    position: relative
    width: 400px
    display: flex
    align-items: center
    justify-content: flex-end

    @media $desktop_small
      width: auto
      order: 3

  &__burger
    margin-right: 47px


  .menu

    &__list
      display: flex

    &__item
      position: relative
      margin-right: 34px
      padding: 25px 0

      font-size: 18px
      line-height: 18px
      letter-spacing: 1.8px
      color: $gray
      text-transform: uppercase

      &:last-child
        margin-right: 0

      &:hover

        & > .submenu
          display: block

          @media $tablet
            display: none


    a
      text-decoration: none

    &__submenu
      display: none
      z-index: 2
      position: absolute
      top: 64px
      width: 320px
      padding: 29px 20px
      border: 1px solid $brown_light
      box-shadow: 0 6px 10px 0 rgba(13, 105, 112, 0.28)
      background-color: $white

    .submenu

      &__item
        margin-bottom: 10px

        font-size: 16px
        line-height: 24px
        color: $gray
        letter-spacing: 0
        text-transform: none

        a
          display: flex
          align-items: flex-start

          &::before
            content: ''
            flex-grow: 0
            flex-shrink: 0
            width: 7px
            height: 11px
            margin-top: 6px
            margin-right: 17px
            background-image: url('../img/general/flag.png')
            background-repeat: no-repeat
            background-size: contain

  .search-form
    display: none
    position: absolute
    right: 0
    top: 0
    width: 432px
    max-width: calc(100vw - 32px)
    background-color: $white

    &_opened
      display: block

    &__form
      display: flex
      align-items: center
      position: relative

    &__close
      position: absolute
      padding: 10px
      top: 3px
      right: 0
      width: 13px
      height: 13px
      box-sizing: content-box
      background-position: center center
      background-repeat: no-repeat
      background-image: url('../img/general/i-close.png')
      cursor: pointer

    &__input
      width: 100%

      input
        width: 100%
        padding: 6px 14px
        border: none
        border-bottom: 1px solid $brown_light

        font-family: 'PTSans'
        font-size: 20px
        line-height: 20px
        letter-spacing: 0
        color: $gray

  .dropdown
    display: none
    position: absolute
    z-index: 2
    top: 0
    left: 0
    height: 100vh
    width: 100%
    background-color: alpha($brown_light, .95)
    padding-top: 76px

    @media $tablet
      padding-top: 44px

    &_opened
      display: block

    &__wrap
      position: relative
      overflow: auto
    
    &__close
      display: block
      position: absolute
      top: -13px
      right: 82px
      width: 19px
      height: 19px
      box-sizing: content-box
      padding: 10px
      background-position: center center
      background-repeat: no-repeat
      background-image: url('../img/general/i-close-white.png')

    &__columns
      display: flex
      flex-wrap: wrap

    &__col
      margin-right: 47px

    .group
      width: 288px
      margin-bottom: 25px

      &__name
        display: block
        border-bottom: 1px solid $white
        padding-bottom: 20px

        color: $white
        text-transform: uppercase
        font-size: 18px
        line-height: 18px
        letter-spacing: 1.8px
        text-decoration: none

      &__link
        width: 50%
        margin-bottom: 14px

        font-size: 14px
        color: $white

        a
          text-decoration: none

      &__links
        display: flex
        flex-wrap: wrap
        justify-content: space-between
        padding-top: 19px

        &_arrow

          .group__link
            width: auto
            position: relative

            &::after
              content: ''
              display: block
              width: 12px
              height: 7px
              background-image: url('../img/general/dropdown-white.png')
              position: absolute
              top: 6px
              right: 0



      &__col
        width: 130px

