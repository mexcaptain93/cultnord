.articles-page

  &__top-line
    display: flex
    justify-content: space-between
    margin-bottom: 55px

    @media $tablet
      flex-direction: column-reverse
      justify-content: center
      align-items: center

  &__filter-add
    max-width: 976px

  .filter
    flex-grow: 1

    &__list
      display: flex
      justify-content: space-between
      flex-wrap: wrap

      @media $tablet
        justify-content: center


    &__item
      margin-bottom: 20px

      @media $tablet
        margin-right: 20px
        margin-left: 20px

      @media $phone
        margin-right: 0
        margin-left: 0


  &__add
    width: 271px
    margin-left: 64px

    @media $tablet
      margin-left: 0
      margin-bottom: 40px


    .button
      width: 100%

      @media $tablet
        display: none

  &__list
    max-width: 976px
    margin-bottom: 110px
    display: flex
    flex-wrap: wrap


  .article
    max-width: 271px
    margin-right: 65px
    margin-bottom: 43px

    @media $tablet
      max-width: calc(33.3% - 50px)

    @media $tablet_small
      max-width: calc(50% - 20px)
      margin-right: 40px

    @media $phone
      max-width: 100%
      margin-right: 0

    &:nth-child(3n)
      margin-right: 0

      @media $tablet_small
        margin-right: 40px

      @media $phone
        margin-right: 0

    &:nth-child(even)

      @media $tablet_small
        margin-right: 0

    &__title
      margin-bottom: 5px

      font-size: 18px
      line-height: 24px
      letter-spacing: 0
      font-family: 'Playfair'
      color: $gray

    &__author
      color: $blue
      font-size: 18px
      line-height: 24px
      font-family: 'Playfair'

      a
        text-decoration: none

        &:hover
          text-decoration: underline

    &__date
      margin-bottom: 2px

      font-size: 14px
      line-height: 36px
      color: alpha($gray, 0.41)
      letter-spacing: 0

    &__preview
      font-size: 11px
      line-height: 16px
      letter-spacing: 0
      color: $gray

  .popup-add-article
    display: none
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    height: 100vh

    @media $tablet
      display: none

    &__overlay
      background-color: rgba(0,0,0,.6)
      height: 100%
      display: flex
      align-items: center
      justify-content: center

    &__container
      position: relative
      max-width: 784px
      width: 100%
      margin: 0 auto
      background-color: $white
      padding: 60px 64px

    &__close
      position: absolute
      cursor: pointer
      top: 16px
      right: 18px
      background-image: url('../img/general/i-close-brown.png')
      width: 28px
      height: 28px
      background-repeat: no-repeat
      background-position: center center

    &__heading
      margin-bottom: 42px

      text-align: center
      font-family: 'Playfair'
      font-size: 24px
      line-height: 20px
      letter-spacing: 2.2px
      font-weight: normal
      color: $brown

    &__hint
      max-width: 560px
      margin: 0 auto 40px

      text-align: center
      font-size: 16px
      line-height: 24px
      letter-spacing: 0
      color: $gray


    .form

      &__list
        display: flex
        flex-wrap: wrap

      &__item
        width: 303px
        margin-bottom: 20px
        margin-right: 33px

        &:nth-child(even)
          width: 320px
          margin-right: 0

        &_file
          width: 100%

          .form

            &__hint
              margin-bottom: 0

            &__small-text
              margin-bottom: 10px

            &__input

              input
                padding: 0
                border: none

      &__hint
        margin-bottom: 10px

        font-size: 14px
        line-height: 22px
        text-transform: uppercase
        letter-spacing: 1.4px
        color: $brown_light2

      &__small-text
        text-transform: none
        font-size: 12px
        letter-spacing: 0
        color: $brown_light2

      &__input

        input
          width: 100%
          padding: 10px
          height: 48px
          border: 1px solid $brown_light
          outline: none
          font-family: 'PTSans'

        .select2
          width: 100%!important

          .select2-selection
            width: 100%!important

      &__bottom
        display: flex
        justify-content: space-between

      &__personal
        padding-top: 4px

      &__add

        button
          width: 270px
          font-family: 'PTSans'