      &__title
        max-width: 280px
        margin-bottom: 15px
        position: relative

        font-family: 'Playfair'
        font-size: 24px
        line-height: 32px
        letter-spacing: 0.6px
        font-weight: bold
        color: $white

        &::after
          content: ''
          display: block
          width: 115px
          height: 2px
          margin-top: 10px
          background-color: $white

      &__descr
        position: relative

        font-size: 14px
        line-height: 22px
        letter-spacing: 0
        color: $white






