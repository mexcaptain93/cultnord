.index-page

  .slider-top
    margin-bottom: 100px

    &__list
      width: 100%

    &__img
      position: relative;
      padding-bottom: 56%;
      background-size: cover;
      background-position: center center

  .sections
    margin-bottom: 23px

    &__list
      display: flex

      @media $phone
        flex-wrap: wrap

    &__item
      position: relative
      width: calc((100% - 32px) / 3)
      margin-right: 16px
      border: 1px solid $brown_light
      padding-top: 54px
      padding-bottom: 25px

      text-decoration: none
      text-align: center

      @media $phone
        width: 100%
        margin-right: 0
        margin-bottom: 60px

      &:last-child
        margin-right: 0

        @media $phone
          margin-bottom: 0

    &__image
      position: absolute
      width: 112px
      top: 0
      left: 50%
      transform: translate(-50%, -60%)
      background-color: $white

    &__title
      margin-bottom: 15px

      color: $gray
      font-size: 22px
      line-height: 20px
      letter-spacing: 2.2px
      text-transform: uppercase

    &__descr
      max-width: 180px
      margin: 0 auto

      color: $gray_light3
      font-size: 14px
      line-height: 20px

  .slider-main
    position: relative
    margin-bottom: 65px

    @media $tablet
      padding: 0 60px

    @media $phone
      padding: 0 30px

    a
      text-decoration: none

    &__prev, &__next
      cursor: pointer
      position: absolute
      top: 50%
      right: calc(100% + 15px)
      transform: translateY(-50%)
      width: 44px
      height: 85px
      background-image: url('../img/general/arrow-index-main-slider-left.png')
      background-repeat: no-repeat
      background-position: center center
      background-size: contain

      @media $tablet
        right: calc(100% - 45px)

      @media $tablet_small
        width: 22px
        right: calc(100% - 35px)

      @media $phone
        right: calc(100% - 25px)

    &__next
      background-image: url('../img/general/arrow-index-main-slider-right.png')
      right: auto
      left: calc(100% + 15px)

      @media $tablet
        left: calc(100% - 45px)

      @media $tablet_small
        left: calc(100% - 35px)

      @media $phone
        left: calc(100% - 25px)



    &__item
      display: flex

      @media $tablet_small
        flex-direction: column

    &__left
      flex-grow: 1

      @media $tablet_small
        width: 100%
        height: 300px

    &__image
      height: 100%
      background-size: cover
      background-position: center center
      background-repeat: no-repeat

    &__right
      display: flex
      flex-direction: column
      justify-content: center
      width: 288px
      height: 375px
      border: 1px solid $brown_light
      border-left-width: 0
      background-color: $gray_light4
      padding: 13px 32px 5px 39px

      @media $tablet_small
        width: 100%
        height: auto
        border-left-width: 1px
        padding: 15px

    &__title
      margin-bottom: 19px

      color: $gray
      font-size: 24px
      line-height: 20px
      letter-spacing: 2.4px
      font-family: 'Playfair'
      font-weight: bold
      text-transform: uppercase

    &__descr
      margin-bottom: 18px
      color: $black
      font-size: 14px
      line-height: 20px
      letter-spacing: 0

    &__link
      border-top: 1px solid $gray_light5
      padding-top: 15px

      color: $brown2
      font-size: 14px
      line-height: 20px
      font-style: italic
      letter-spacing: 0
      text-decoration: underline

      &::before
        content: ''
        width: 12px
        height: 20px
        display: inline-block
        vertical-align: top
        margin-right: 16px
        background-image: url('../img/general/bookmark-blue.png')

      a, span
        display: inline-block
        vertical-align: top
        max-width: 185px

  .specproject
    margin: 0 auto 15px
    display: flex
    align-items: center
    justify-content: center

    @media $phone
      flex-direction: column


    &__label
      margin-left: 110px
      flex-grow: 0
      flex-shrink: 0
      width: 267px
      height: 60px
      padding-left: 40px
      background-color: $brown_light

      font-family: 'Playfair'
      font-weight: bold
      color: $white
      font-size: 24px
      line-height: 60px
      letter-spacing: 0

      @media $tablet
        margin-left: 0

      @media $tablet_small
        display: none

    &__icon
      flex-grow: 0
      flex-shrink: 0
      width: 152px
      height: 152px
      border-radius: 50%
      border: 2px solid $brown_light
      background-color: white
      background-image: url('../img/general/specproject-icon.png')
      background-position: center center
      background-repeat: no-repeat
      background-size: 100px
      position: relative
      left: -31px

      @media $tablet_small
        left: 0
        margin-right: 10px

      @media $phone
        margin-right: 0
        width: 80px
        height: 80px
        background-size: 60px

    &__title
      font-family: 'Playfair'
      font-weight: bold
      font-size: 24px
      line-height: 30px
      color: $gray
      letter-spacing: 0

      @media $phone
        text-align: center

  .timeline
    display: flex
    max-width: 710px
    padding-left: 77px
    padding-right: 0
    margin: 0 auto 80px

    @media $tablet
      padding-left: 16px
      padding-right: 16px

    @media $tablet_small
      max-width: 290px

    @media $phone
      max-width: 260px

    &__item
      width: 100%
      max-width: 283px
      margin-bottom: 32px

      &:last-child
        margin-bottom: 0

      &:nth-child(2n)
        max-width: 350px

        @media $tablet_small
          max-width: 283px

        @media $phone
          max-width: 260px


        .event
          position: relative
          top: 180px
          padding-left: 100px

          @media $tablet_small
            top: 0
            padding-left: 0

          &::after
            right: auto
            left: -6px

            @media $tablet_small
              left: auto
              right: -28px

          &::before
            right: auto
            left: 9px
            width: 75px

            @media $tablet_small
              right: -10px
              left: auto
              width: 144px

            @media $phone
              width: 110px

    &__list
      display: flex
      flex-wrap: wrap
      position: relative
      padding-bottom: 15px

      @media $tablet_small
        flex-direction: column
        flex-wrap: nowrap
        width: 100%

      &::after
        content: ''
        display: block
        position: absolute
        top: 16px
        bottom: 0
        left: 280px
        width: 3px
        background-image: url('../img/general/timeline-line.png')
        background-repeat: repeat-y

        @media $phone
          left: 250px

    .event
      position: relative

      &::after
        content: ''
        width: 9px
        height: 9px
        display: block
        background-color: $blue2;
        position: absolute
        top: 13px
        right: -3px

        @media $tablet_small
          right: -28px

      &::before
        content: ''
        width: 144px
        height: 1px
        background-color: $gray_light2
        display: block
        position: absolute
        top: 17px
        right: 15px

        @media $tablet_small
          right: -10px

        @media $phone
          width: 110px

      &__year
        margin-bottom: 16px

        color: $blue2
        font-family: 'PTSerif'
        font-weight: bold
        font-size: 48px
        line-height: 30px
        letter-spacing: 0

      &__name
        max-width: 235px
        margin-bottom: 8px

        color: $black
        font-size: 18px
        line-height: 22px
        font-family: 'PTSerif'
        font-weight: bold
        letter-spacing: 0

      &__descr
        max-width: 235px
        color: $gray_light3
        font-size: 14px
        line-height: 20px
        letter-spacing: 0

  .viktorina
    margin-bottom: 94px

    @media $tablet
      padding-left: 50px
      padding-right: 50px

    @media $phone
      padding-left: 10px
      padding-right: 10px

    &__wrap
      display: flex
      position: relative
      background-color: $blue2
      padding-top: 17px
      padding-bottom: 35px
      box-shadow: 0 6px 9px 0 rgba(0, 126, 136, 0.3)

      @media $tablet_small
        flex-direction: column
        align-items: center

    &__img
      flex-shrink: 0
      position: relative
      left: -48px

      @media $tablet_small
        left: 0

    &__text

      @media $tablet_small
        text-align: center


    &__title
      display: inline-block
      padding: 21px 23px 0 17px
      position: relative
      margin-bottom: 27px

      color: $white
      font-size: 24px
      line-height: 30px
      letter-spacing: 0
      font-family: 'Playfair'
      font-weight: bold

      @media $phone
        padding-left: 10px
        padding-right: 10px

      span
        position: relative
        z-index: 1

      &::after
        content: ''
        height: 9px
        background-color: $blue
        position: absolute
        bottom: -3px
        left: 0
        right: 0
        display: block
        z-index: 0

    &__descr
      margin-bottom: 43px
      padding-left: 17px
      max-width: 515px

      font-size: 18px
      line-height: 22px
      letter-spacing: 0
      color: $white

      @media $phone
        padding-left: 10px
        padding-right: 10px

    &__btn
      padding-left: 17px

      @media $phone
        padding-left: 10px
        padding-right: 10px

      .button

        &_serif
          background-color: $blue2
          border-color: $blue

          &:hover
            background-color: $white



    &__label
      position: absolute
      top: 0
      left: calc(100% + 38px)
      padding: 10px 18px
      transform: rotate(90deg)
      transform-origin: left top 0

      text-transform: uppercase
      color: $white
      background-color: $brown_light
      text-decoration: none
      font-size: 14px
      line-height: 18px
      letter-spacing: 1.4px

      @media $phone
        transform: rotate(0)
        top: auto
        bottom: 100%
        left: auto
        right: 0

      a
        text-decoration: none

  .story-in-pic
    margin-bottom: 100px

    &__list
      display: flex
      justify-content: space-between

      @media $tablet_small
        flex-direction: column
        align-items: center

    &__item
      position: relative
      display: flex
      flex-direction: column
      justify-content: flex-end
      width: calc(100% / 3 - 10px)
      height: 354px
      padding-bottom: 35px
      background-color: $brown2
      transition: .3s ease opacity

      text-decoration: none

      @media $tablet_small
        max-width: 400px
        width: 100%
        margin-bottom: 20px

      &:last-child

        @media $tablet_small
          margin-bottom: 0

      &:hover
        opacity: .7

    &__img
      position: absolute
      z-index: 0
      top: 0
      left: 0
      right: 0
      bottom: 0
      opacity: .3
      background-size: cover
      background-repeat: no-repeat

      @media $tablet_small
        background-size: cover


    &__title
      position: relative
      z-index: 1
      padding: 0 20px
      margin-bottom: 15px

      font-size: 18px
      line-height: 24px
      letter-spacing: 0
      font-family: 'Playfair'
      font-weight: bold
      color: $white
      text-align: center

      @media $tablet_small
        padding: 0 10px

    &__descr
      position: relative
      z-index: 1
      padding: 0 26px

      font-size: 14px
      line-height: 22px
      letter-spacing: 0
      color: $white
      text-align: center

  .about
    display: flex
    margin-bottom: 135px

    &__logo
      flex-shrink: 0
      padding-top: 7px
      padding-left: 24px
      padding-right: 52px

      @media $tablet_small
        max-width: 200px

      @media $phone
        display: none

    &__heading
      @extend .like-h1

      margin-bottom: 25px

      font-size: 24px
      line-height: 32px
      font-weight: bold
      letter-spacing: .96px

    &__descr
      max-width: 460px
      margin-bottom: 34px

      p
        line-height: 25px

        margin-bottom: 21px

    &__btn

      @media $phone
        text-align: center


  .fests
    margin-bottom: 85px

    &__heading
      @extend .like-h1

      margin-bottom: 55px

      font-size: 24px
      line-height: 32px
      font-weight: bold
      text-align: center

    &__content
      display: flex

      @media $tablet_small
        flex-direction: column

    .closest
      flex-shrink: 0
      padding-left: 85px
      padding-right: 69px
      max-width: 272px
      box-sizing: content-box
      border-right: 1px solid $gray_light5

      text-decoration: none

      @media $tablet
        padding-left: 20px
        padding-right: 20px

      @media $tablet_small
        max-width: 100%
        border-right: 0
        border-bottom: 1px solid $gray_light5
        padding-bottom: 20px
        margin-bottom: 20px

      &__img
        margin-bottom: 26px
        max-height: 216px
        text-align: center

      &__info
        font-size: 12px
        line-height: 14px
        letter-spacing: 1.2px
        color: $blue2
        text-transform: uppercase
        font-weight: bold
        text-align: center

      &__name
        @extend .like-h2

        font-weight: bold
        text-align: center
        line-height: 30px

      &__date
        font-size: 11px
        letter-spacing: 1.1px

    &__slider
      padding-left: 55px
      padding-bottom: 55px
      max-width: 340px

      @media $tablet
        padding-left: 20px

      @media $tablet_small
        padding-left: 0
        max-width: 100%
        margin: 0 auto
        width: 400px


    .fest
      display: flex
      margin-bottom: 31px

      text-decoration: none

      &:last-child
        margin-bottom: 0

      &__img
        flex-shrink: 0

      &__text
        padding-left: 34px

      &__location
        font-size: 12px
        line-height: 14px
        letter-spacing: 1.2px
        color: $blue2
        text-transform: uppercase
        font-weight: bold

      &__date
        font-size: 12px
        line-height: 14px
        letter-spacing: 0.6px
        color: $blue2
        text-transform: uppercase
        font-weight: bold

      &__name
        @extend .like-h2

        max-width: 180px

        font-weight: bold
        font-size: 20px
        line-height: 26px

    .slick-dots
      display: flex!important
      justify-content: center
      margin-top: 22px

      button
        font-size: 0
        line-height: 0
        width: 12px
        height: 12px
        background-color: $white
        border-radius: 6px
        border: 1px solid $brown_light
        padding: 0

      li
        margin-right: 12px

        &:last-child
          margin-right: 0

      .slick-active

        button
          background-color: $brown_light
          
  .banner
    margin-bottom: 134px


    &__wrap
      height: 177px
      width: 100%
      max-width: 944px
      margin: 0 auto
      display: flex
      align-items: center
      border: 2px solid $brown_light
      background-image: url('../img/general/banner-bg.jpg')
      background-size: cover
      background-repeat: no-repeat
      background-position: center center

      @media $tablet_small
        flex-direction: column
        padding: 40px 0
        height: auto

    &__img
      padding: 0 36px
      flex-shrink: 0

      @media $tablet
        max-width: 360px

      @media $tablet_small
        margin-bottom: 20px

    &__text
      padding: 1px 50px 15px 40px
      color: $brown3
      font-family: 'PTSerif'
      font-size: 18px
      line-height: 24px
      letter-spacing: 0
      text-align: center

    &__btn
      text-align: center

      .button
        padding: 5px 13px
        border-width: 2px
        background-color: transparent

        font-family: 'PTSerif'
        font-size: 12px
        line-height: 18px
        letter-spacing: 0
        font-weight: bold
        
        .next-bold
          margin-left: 4px
          background-image: url('../img/general/next-bold-brown.png')

        &:hover
          color: $blue

          .next-bold
            background-image: url('../img/general/next-bold-blue.png')


  .unesco
    max-width: 944px
    padding: 85px 48px 48px
    border: 2px solid $brown_light

    &__wrap
      position: relative


    &__heading
      width: 100%
      display: flex
      align-items: center
      position: absolute
      top: -145px
      padding-left: 27px
      background-color: $white


    &__logo
      flex-shrink: 0
      margin-right: 27px

    &__title
      @extend .like-h1

      font-size: 24px
      line-height: 30px
      letter-spacing: 2.4px
      font-weight: bold
      text-align: center

    &__list
      display: flex
      justify-content: space-between

    .item
      position: relative
      width: calc(50% - 8px)
      padding: 38px 47px 63px

      background-color: $brown2
      text-decoration: none
      transition: .3s ease opacity
      margin-right: 16px

      &:last-child
        margin-right: 0

      &:hover
        opacity: .7

      &__img
