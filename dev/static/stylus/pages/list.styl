.list-page

  .pagination
    max-width: 700px
    margin: 0 auto 96px

    &__list
      padding-left: 21px

  .groups

    &__list
      column-count: 3
      margin-right: -144px
      margin-bottom: 110px

      @media $desktop_small
        margin-right: 0

      @media $tablet
        column-count: 2

      @media $phone
        column-count: auto

        display: flex
        flex-direction: column
        align-items: center

    &__item
      display: inline-block
      width: 100%
      margin-bottom: 40px

  .group

    &__name
      margin-bottom: 15px

      color: $blue
      font-size: 24px
      line-height: 20px
      text-transform: uppercase
      font-family: 'Playfair'
      font-weight: bold

    &__list
      max-width: 195px

    &__item
      margin-bottom: 1px

      font-size: 18px
      line-height: 35px

      &:last-child
        margin-bottom: 0