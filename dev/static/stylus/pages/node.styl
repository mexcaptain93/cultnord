.node-page

  .like-h1
    margin-bottom: 40px

    font-size: 22px
    letter-spacing: 2.2px
    font-weight: normal

  .container

    &_small
      max-width: 592px

  .image
    padding-bottom: 5px
    margin-bottom: 25px
    border-bottom: 1px solid $gray_light5

    &__img
      margin-bottom: 14px

    &__hint
      font-family: 'Playfair'
      font-style: italic
      font-size: 16px
      line-height: 28px
      letter-spacing: 0
      color: $brown

  .sidebar
    @extend .content-sidebar .sidebar

    display: flex
    width: 100%
    margin: 50px 0 16px

    &__block
      max-width: 250px
      margin-right: 40px
      margin-bottom: 0

      &:last-child
        margin-right: 0

    &__heading
      border-color: $brown_light
      padding-bottom: 9px

      font-size: 18px
      letter-spacing: 2px

  .share
    display: flex
    justify-content: space-between
    border-top: 1px solid $brown_light
    padding-top: 20px
    margin-bottom: 53px

    &__text
      font-family: 'Playfair'
      font-size: 16px
      line-height: 18px
      letter-spacing: 0
      color: $gray

    &__list
      display: flex
      margin-top: -5px

    &__item
      margin-right: 20px

      &:last-child
        margin-right: 0

  .navigation
    display: flex
    justify-content: space-between
    margin-bottom: 100px

    &__prev
      max-width: 255px

    &__next
      max-width: 255px

    &__btn
      margin-bottom: 30px

      .button
        padding-left: 20px
        padding-right: 20px
        width: 100%

    &__title
      margin-bottom: 11px

      font-family: 'Playfair'
      font-size: 16px
      line-height: 18px
      letter-spacing: 0
      color: $brown
      font-weight: bold

      a
        text-decoration: none

    &__descr
      font-size: 13px
      line-height: 18px
      letter-spacing: 0
      color: $gray



