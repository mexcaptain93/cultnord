.node-page

  .like-h1
    margin-bottom: 40px

    font-size: 22px
    letter-spacing: 2.2px
    font-weight: normal

  .container

    &_small
      max-width: 592px

  .image
    padding-bottom: 5px
    margin-bottom: 25px
    border-bottom: 1px solid $gray_light5

    &__img
      margin-bottom: 14px

    &__hint
      font-family: 'Playfair'
      font-style: italic
      font-size: 16px
      line-height: 28px
      letter-spacing: 0
      color: $brown

  .sidebar
    @extend .content-sidebar .sidebar

    display: flex
    width: 100%
    margin: 50px 0 16px

    @media $phone
      flex-direction: column

    &__block
      max-width: 250px
      margin-right: 40px
      margin-bottom: 0

      @media $phone
        max-width: none

      &:last-child
        margin-right: 0

    &__heading
      border-color: $brown_light
      padding-bottom: 9px

      font-size: 18px
      letter-spacing: 2px

  .share
    display: flex
    justify-content: space-between
    border-top: 1px solid $brown_light
    padding-top: 20px
    margin-bottom: 53px

    @media $phone
      flex-direction: column

    &__text
      padding-right: 20px

      font-family: 'Playfair'
      font-size: 16px
      line-height: 18px
      letter-spacing: 0
      color: $gray

      @media $phone
        padding-right: 0
        margin-bottom: 20px


    &__list
      display: flex
      margin-top: -5px

      @media $phone
        justify-content: center

    &__item
      margin-right: 20px

      &:last-child
        margin-right: 0

  .navigation
    display: flex
    justify-content: space-between
    margin-bottom: 100px

    @media $phone
      flex-direction: column

    &__prev
      max-width: 255px

      @media $tablet_small
        padding-right: 10px

      @media $phone
        max-width: none
        margin-bottom: 40px
        padding-right: 0

    &__next
      max-width: 255px

      @media $tablet_small
        padding-left: 10px

      @media $phone
        max-width: none
        padding-left: 0

    &__btn
      margin-bottom: 30px

      .button
        padding-left: 20px
        padding-right: 20px
        width: 100%

        @media $tablet_small
          padding-left: 5px
          padding-right: 5px

        i

          @media $tablet_small
            margin-right: 5px

          &.next

            @media $tablet_small
              margin-right: 0
              margin-left: 5px

    &__title
      margin-bottom: 11px

      font-family: 'Playfair'
      font-size: 16px
      line-height: 18px
      letter-spacing: 0
      color: $brown
      font-weight: bold

      a
        text-decoration: none

    &__descr
      font-size: 13px
      line-height: 18px
      letter-spacing: 0
      color: $gray



