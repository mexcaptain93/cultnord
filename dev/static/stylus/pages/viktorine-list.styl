.viktorine-list-page

  &__list
    display: flex
    flex-wrap: wrap
    justify-content: center
    margin-bottom: 60px

  .viktorine
    width: 33.3%
    margin-bottom: 80px

    @media $tablet_small
      width: 50%
      padding: 0 5px
      margin-bottom: 60px

    @media $phone
      width: 100%

    &:last-child

      @media $tablet_small
        margin-bottom: 0

    &__image
      margin-bottom: 27px

      text-align: center

      img
        width: 215px
        height: 215px
        object-fit: cover
        object-position center
        border-radius: 50%
        box-shadow: 0 6px 9px 0 rgba(43, 113, 118, 0.3);

    &__title
      margin-bottom: 18px

      font-family: 'Playfair'
      font-size: 20px
      line-height: 28px
      letter-spacing: 0
      color: $brown
      text-align: center

      a
        text-decoration: none

    &__btn
      text-align: center

      .button
        padding: 9px 19px 8px
        font-family: 'Playfair'
        font-weight: bold
        font-size: 12px

  .viktorina
    @extend .index-page .viktorina
    width: 100%

    &__wrap
      background-repeat: no-repeat
      background-position: top center

      @media $tablet_small
        background-size: contain